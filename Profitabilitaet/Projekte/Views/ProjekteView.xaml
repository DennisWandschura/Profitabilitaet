<UserControl x:Class="Profitabilitaet.Projekte.Views.ProjekteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Profitabilitaet.Projekte.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:ProjekteViewModel/>
    </UserControl.DataContext>
    <DockPanel>
        <ListView DockPanel.Dock="Left" ScrollViewer.VerticalScrollBarVisibility="Visible">
            <ListViewItem Content="Projekt A"/>
            <ListViewItem Content="Projekt B"/>
        </ListView>
        <StackPanel>
            <TextBlock FontSize="20" Text="Projekt A" HorizontalAlignment="Center"/>
            <TextBlock Text="Projektinformationen"/>

            <StackPanel Orientation="Horizontal" Margin="4">
                <StackPanel Margin="4">
                    <TextBlock Text="Teilnehmende Mitarbeiter"/>
                    <ListView>
                        <ListViewItem Content="Mitarbeiter A"/>
                        <ListViewItem Content="Mitarbeiter B"/>
                    </ListView>
                </StackPanel>

                <StackPanel>
                    <Button Content="&lt;&lt; Hinzufügen" Margin="2"/>
                    <Button Content="Entfernen >>" Margin="2"/>
                </StackPanel>

                <StackPanel Margin="4">
                    <TextBlock Text="Freie Mitarbeiter"/>
                    <ListView>
                        <ListViewItem Content="Mitarbeiter C"/>
                        <ListViewItem Content="Mitarbeiter D"/>
                    </ListView>
                </StackPanel>
            </StackPanel>


        </StackPanel>
    </DockPanel>
</UserControl>
