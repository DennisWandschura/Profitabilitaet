<UserControl x:Class="Profitabilitaet.Projekte.Views.ProjekteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Profitabilitaet.Projekte.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:ProjekteViewModel/>
    </UserControl.DataContext>
    <DockPanel>
        <ListView DockPanel.Dock="Left" ScrollViewer.VerticalScrollBarVisibility="Visible">
            <ListViewItem Content="Projekt A"/>
            <ListViewItem Content="Projekt B"/>
        </ListView>
        <StackPanel Margin="4">
            <TextBlock FontSize="20" Text="Projekt A" HorizontalAlignment="Center"/>
            <TextBlock Text="Bezeichnung"/>
            <TextBlock Text="Projektleiter: Mitarbeiter A"/>
            <TextBlock Text="Auftragswert: EUR 1000,00"/>
            <TextBlock Text="AngezahlterBetrag: EUR 500,00"/>
            <TextBlock Text="Beginn: 01.01.24"/>
            <TextBlock Text="Ende: 01.02.24"/>
          
            <CheckBox Content="Ist Stoniert:"/>

            <StackPanel>
                <TextBlock Text="Buchungen"/>
                <ListView>
                    <ListViewItem Content="Mitarbeiter C, 01, 2024, 20"/>
                    <ListViewItem Content="Mitarbeiter D, 01, 2024, 40"/>
                </ListView>
                <Button Content="Neue Buchung"/>
            </StackPanel>


        </StackPanel>
    </DockPanel>
</UserControl>
