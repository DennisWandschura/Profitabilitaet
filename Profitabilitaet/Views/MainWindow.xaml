<Window x:Class="Profitabilitaet.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Profitabilitaet.Views"
         xmlns:vm="clr-namespace:Profitabilitaet.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit"/>
            </MenuItem>
        </Menu>
        
        <TabControl>
            <TabItem Header="Projekte">
                <local:ProjekteView/>
            </TabItem>
            <TabItem Header="Mitarbeiter">
                <local:MitarbeiterView/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
